{{#if argument.allowedValues}}
    {{view "select" content=argument.allowedValues
                    optionValuePath="content.value"
                    optionLabelPath="content.label"
                    value=value
                    classNames="form-control bool"
    }}
{{else}}
    {{input value=value class="form-control" placeholder=argument.label focus-out="blur" focus-in="focus"}}
{{/if}}
